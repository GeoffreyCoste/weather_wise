// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                            String        @id @default(auto()) @map("_id") @db.ObjectId
  image                         String?       @unique
  firstName                     String
  lastName                      String
  location                      String
  email                         String        @unique
  mobile                        String?       @unique
  preference                    String?       @default("email")
  password                      String
  passwordToken                 String?
  passwordTokenExpiry           DateTime?
  favourites                    City[]
}

model City {
  id                            String        @id @default(auto()) @map("_id") @db.ObjectId
  geonameId                     String
  nameFr                        String
  nameEn                        String
  countryId                     String
  countryCode                   String
  countryIndexFr                String
  countryIndexEn                String
  continentCode                 String
  continentIndexFr              String
  continentIndexEn              String
  timezone                      String
  latitude                      String
  longitude                     String
  userId                        String        @db.ObjectId
  user                          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}